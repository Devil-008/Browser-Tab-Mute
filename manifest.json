{
  "manifest_version": 3,
  "name": "Mute Tab",
  "version": "2.0",
  "description": "Control tab volume and mute/unmute functionality with an easy-to-use interface.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "Volume Control",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}